{
	"manifest_version": 3,
	"name": "Email Security Extension",
	"version": "1.0",
	"description": "Detect and prevent emails with critical information from being sent.",
	"permissions": [
		"activeTab",
		"scripting",
		"tabs",
		"identity",
		"storage",
		"notifications"
	],
	"oauth2": {
		"client_id": "794046597479-0jrggfu6luvkgd3os6jqmt26mg7k3knv.apps.googleusercontent.com",
		"scopes": [
		  "https://www.googleapis.com/auth/gmail.readonly"
		]
	  },
	"host_permissions": [
		"https://mail.google.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "Icons/default_icon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://mail.google.com/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	]
}